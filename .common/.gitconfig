[include]
    path = ~/.dotfiles/.common/.gitconfig.ignored

[core]
    whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
    excludesfile = ~/.dotfiles/.common/.gitignore.global
    hookspath = ~/.dotfiles/.common/.git.hooks

[commit]
    template = ~/.dotfiles/.common/.gitcommit.template

[alias]
    assume-changed = update-index --no-assume-unchanged
    assume-unchanged = update-index --assume-unchanged

[difftool]
    prompt = false

[push]
    default = matching

[color]
    ui = auto

[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
